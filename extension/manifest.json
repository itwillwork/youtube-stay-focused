{
  "manifest_version": 2,
  "version": "1.0",
  "name": "youtube-stay-focused",
  "description": "Скрываем не тематические рекомендации YouTube",
  "browser_action": {
    "default_icon": "logo.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "css": ["styles.css"],
      "js": ["page-script.js"]
    }
  ],
  "permissions": [
    "https://www.youtube.com/*"
  ]
}
