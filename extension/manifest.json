{
  "manifest_version": 2,
  "version": "1.3",
  "name": "youtube-stay-focused",
  "description": "Скрываем НЕ тематические рекомендации YouTube",
  "browser_action": {
    "default_icon": "logo-32.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "css": ["styles.css"],
      "js": ["page-script.js"]
    }
  ],
  "icons": {
      "16": "logo-16.png",
      "32": "logo-32.png",
      "48": "logo-48.png",
      "128": "logo-128.png"
    },
  "permissions": [
    "https://www.youtube.com/*",
    "storage"
  ]
}
